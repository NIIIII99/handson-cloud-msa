pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    name: gradle
spec:
  containers:
  - name: gradle
    image: gradle:6.3.0-jdk11
    command:
    - cat
    tty: true
  - name: docker
    image: docker
    command:
    - cat
    tty: true
"""      
    }
  }
  stages {
    stage('build and push docker image') {
      steps {
        container('gradle') {
          // withDockerRegistry([url:"https://gcr.io", credentialsId: "gcr:architect-certification-289902"]) {
          withCredentials([[$class: 'FileBinding', credentialsId: 'gcr:architect-certification-289902', variable: 'GOOGLE_APPLICATION_CREDENTIALS']])
            sh 'cd eshop-adservice && gradle jib --image gcr.io/architect-certification-289902/adservice --no-daemon -Djib.to.auth.username=_json_key -Djib.to.auth.password=$GOOGLE_APPLICATION_CREDENTIALS'
          }
        }
      }
    }
  }
}